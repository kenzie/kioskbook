{
  "ConfigurationVersion": 4,
  "Information": {
    "Name": "KioskBook Development VM",
    "Notes": "Virtual machine for testing KioskBook Alpine Linux installer",
    "UUID": "A1B2C3D4-E5F6-7890-ABCD-EF1234567890"
  },
  "System": {
    "Architecture": "x86_64",
    "Boot": {
      "BootOrder": ["cdrom", "hd", "network"],
      "OperatingSystem": "Linux"
    },
    "CPU": {
      "Cores": 4,
      "ForceMulticore": true
    },
    "Memory": 4096,
    "SystemUUID": "A1B2C3D4-E5F6-7890-ABCD-EF1234567890"
  },
  "QEMU": {
    "QEMUMachine": {
      "Type": "q35",
      "Properties": {
        "kernel-irqchip": "on"
      }
    },
    "QEMUArguments": [
      {
        "Parameter": "-cpu",
        "Value": "host,+ssse3,+sse4.1,+sse4.2,+x2apic"
      },
      {
        "Parameter": "-enable-kvm"
      },
      {
        "Parameter": "-machine",
        "Value": "q35,accel=hvf:kvm:tcg"
      }
    ]
  },
  "Drives": [
    {
      "Identifier": "boot-disk",
      "ImageName": "kioskbook-disk.qcow2",
      "ImageType": "qcow2",
      "Interface": "nvme",
      "Removable": false,
      "ReadOnly": false,
      "Size": 21474836480,
      "Properties": {
        "logical_block_size": 512,
        "physical_block_size": 512
      }
    },
    {
      "Identifier": "cdrom",
      "ImageType": "none",
      "Interface": "ide",
      "Removable": true,
      "ReadOnly": true
    }
  ],
  "Networks": [
    {
      "Identifier": "network0",
      "Mode": "Shared",
      "Properties": {
        "net": "192.168.64.0/24",
        "dhcpstart": "192.168.64.100",
        "dhcpend": "192.168.64.200",
        "hostfwd": [
          "tcp::2222-:22",
          "tcp::3000-:3000"
        ]
      }
    }
  ],
  "Displays": [
    {
      "Identifier": "display0",
      "Hardware": "virtio-gpu-gl-pci",
      "Properties": {
        "xres": 1920,
        "yres": 1080,
        "gl": "on"
      }
    }
  ],
  "Input": [
    {
      "Identifier": "keyboard",
      "Hardware": "usb-kbd"
    },
    {
      "Identifier": "mouse",
      "Hardware": "usb-mouse"
    }
  ],
  "Sound": [
    {
      "Identifier": "audio",
      "Hardware": "intel-hda",
      "Properties": {
        "codec": "hda-output"
      }
    }
  ],
  "Serials": [
    {
      "Identifier": "serial0",
      "Mode": "builtin",
      "Hardware": "isa-serial"
    }
  ],
  "Virtualization": {
    "UseHypervisor": true,
    "UseLocalTime": false
  },
  "Sharing": {
    "HasClipboardSharing": true,
    "DirectoryShare": []
  }
}